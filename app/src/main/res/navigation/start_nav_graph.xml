<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_nav_graph"
    app:startDestination="@id/splashFragment">

    <argument
        android:name="splashType"
        android:defaultValue="CHECK_TYPE"
        app:argType="ru.ok.itmo.tamtam.start.SplashType" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.ok.itmo.tamtam.start.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_app_nav_graph"
            app:destination="@id/app_nav_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="channels"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_splashFragment_to_login_nav_graph"
            app:destination="@id/login_nav_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="splashType"
            android:defaultValue="CHECK_TYPE"
            app:argType="ru.ok.itmo.tamtam.start.SplashType" />
    </fragment>
    <include app:graph="@navigation/app_nav_graph" />
    <include app:graph="@navigation/login_nav_graph" />
</navigation>