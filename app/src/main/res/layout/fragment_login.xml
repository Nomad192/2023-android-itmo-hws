<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.FragmentLogin"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/body"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_left_back"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_marginStart="4dp"

            android:padding="12dp"

            android:src="@drawable/arrow_left_outline_back_vk"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/arrow_left_back_description"

             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"

            android:layout_margin="16dp"

            android:text="@string/action_bar_login_title"
            android:textColor="@color/text"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:outlineProvider="bounds"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/navbar"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="32dp"
        android:paddingBottom="48dp"
        android:paddingHorizontal="24dp"

        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/login_info"
        android:textSize="18sp"
        android:textColor="@color/text"
        />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="16dp"

            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"

            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:counterTextColor="@color/secondary"
            app:boxStrokeColor="@color/accent"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:errorTextAppearance="@style/MyZeroSizeTextAppearance"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/minHeight_touchZone"
                android:hint="@string/login_message"
                android:inputType="text"

                android:textSize="20sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"

                android:paddingVertical="15dp"
                android:paddingHorizontal="16dp"

                android:scrollbars="horizontal"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="16dp"

            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"

            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:counterTextColor="@color/secondary"
            app:boxStrokeColor="@color/accent"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            app:errorIconDrawable="@null"
            app:errorTextAppearance="@style/MyZeroSizeTextAppearance"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/minHeight_touchZone"
                android:hint="@string/password_message"
                android:inputType="textPassword"

                android:textSize="20sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"

                android:paddingVertical="15dp"
                android:paddingHorizontal="16dp"

                android:scrollbars="horizontal"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            android:clickable="true"
            android:focusable="true"

            android:layout_marginStart="-10dp"
            android:padding="10dp"

            android:gravity="center"
            android:minHeight="48dp"
            android:background="?android:attr/selectableItemBackground"

            android:text="@string/forgot_password_link_message"
            android:textColor="@color/active_elements"
            android:textSize="18sp" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/body"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/login_button_massage"

        android:textColor="@color/white"

        android:enabled="false"

        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"

        android:paddingHorizontal="48dp"
        android:paddingVertical="15dp"

        app:cornerRadius="@dimen/button_corner_radius"

        android:backgroundTint="@color/disabled_button"
        >
    </com.google.android.material.button.MaterialButton>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:visibility="invisible"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>