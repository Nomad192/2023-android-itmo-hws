<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_chat_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@+id/fragment_chat_body"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrow_left_back"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_marginStart="4dp"

            android:clickable="true"

            android:contentDescription="@string/arrow_left_back_description"

            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="12dp"


            android:src="@drawable/icon_arrow_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/fragment_chat_navbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="18dp"

            android:text=""

            android:textColor="@color/text"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/fragment_chat_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_chat_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_chat_navbar">

        <TextView
            android:id="@+id/my_chat_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            android:textSize="30sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_chat_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_chat_body">


        <ImageView
            android:id="@+id/fragment_chat_input_smile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:contentDescription=""

            android:src="@drawable/icon_smile_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment_chat_input_message"
            />

        <EditText
            android:id="@+id/fragment_chat_input_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_chat_input_smile_icon"
            app:layout_constraintEnd_toStartOf="@+id/fragment_chat_input_attach_icon"

            android:text="Текст сообщения"

            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/fragment_chat_input_attach_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:contentDescription=""

            android:src="@drawable/icon_attach_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_chat_input_message"
            app:layout_constraintEnd_toStartOf="@+id/fragment_chat_input_mic_icon"
            />

        <ImageView
            android:id="@+id/fragment_chat_input_mic_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_marginStart="16dp"

            android:contentDescription=""

            android:src="@drawable/icon_mic_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_chat_input_attach_icon"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>